{
  "manifest_version": 3,
  "name": "EPAD Downloader",
  "version": "2.0",
  "description": "Baixa documentos automaticamente com nomes organizados no SIGADAER e SILOMS.",
  "permissions": ["scripting", "activeTab", "tabs", "https://api.sigadaer.intraer/*"],
  "host_permissions": [
    "*://*.sigadaer.intraer/*",
    "*://*.siloms.intraer/*"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.sigadaer.intraer/*", "*://*.siloms.intraer/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
